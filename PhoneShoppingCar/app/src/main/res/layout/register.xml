<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/addad" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="30dp"
        android:text="管理员注册" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:textColor="#000000"
            android:paddingTop="20dp"/>

        <EditText
            android:id="@+id/resetpwd_edit_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/adname"
            android:ems="10"
            android:hint="请输入您的用户名"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:text="性别"
            android:textSize="25sp"
            android:textColor="#000000"
            android:paddingTop="20dp"/>

        <EditText
            android:id="@+id/resetpwd_edit_sex"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/sex"
            android:hint="请输入您的性别"
            android:layout_height="40dp"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:paddingTop="20dp"
            android:text="手机号码"
            android:textColor="#000000"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/resetpwd_edit_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/phonenumber"
            android:ems="10"
            android:hint="请输入您的手机号码" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:text="密码"
            android:textSize="25sp"
            android:textColor="#000000"
            android:paddingTop="20dp"/>

        <EditText
            android:id="@+id/resetpwd_edit_pwd_old"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/password"
            android:hint="请输入您的密码"
            android:ems="12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:text="确认密码"
            android:textSize="25sp"
            android:textColor="#000000"
            android:paddingTop="20dp"/>

        <EditText
            android:id="@+id/resetpwd_edit_pwd_new"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/password"
            android:hint="请确认您的密码"
            android:ems="16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="65dp">

        <Button
            android:id="@+id/sure"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape1"
            android:text="确认"/>

        <Button
            android:id="@+id/cancel"
            android:layout_marginLeft="50dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape1"
            android:text="取消"/>

    </LinearLayout>
</LinearLayout>
